    <p class="texto" id="">$<%= product.price %></p>
  </div>
  <div class="description">
    <p><%= product.description %></p>
  </div>
  <div class="ranking">
    <i class="fa-solid fa-star" style="color:#00a62e"></i>
    <i class="fa-solid fa-star" style="color:#00a62e"></i>
    <i class="fa-solid fa-star" style="color:#00a62e"></i>
    <i class="fa-solid fa-star" style="color:#00a62e"></i>
    <i class="fa-solid fa-star" style="color:#00a62e"></i>
  </div>
