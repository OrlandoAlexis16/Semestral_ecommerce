<div class="card-deals">
  <div class="back-image">
    <a href="/product/<%= product.id %>"><img class="product-image" src="<%= product.image %>" alt="Product image"></a>
  </div>
  <div class="name-price">
    <a href="/product/<%= product.id %>">
      <p class="texto" id=""><%= product.name %></p>
